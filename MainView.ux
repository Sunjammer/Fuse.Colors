<App>
    <Android.StatusBarConfig Color="Black" />
    
    <Fuse.Colors.Palette ux:Name="gen" BaseColor="#5A7684" Mode="Complementary" />

    <JavaScript>
        const O = require("FuseJS/Observable")
        const state = O(false)
        module.exports = {
            state,
            toggleState : () => state.value = !state.value
        }
    </JavaScript>

    <WhileTrue Value="{state}">
        <Change colors.LayoutMaster="fullscreen"/>
    </WhileTrue>

    <ClientPanel>
        <Panel ux:Name="fullscreen"/>
        <DockPanel>
            <Grid ux:Name="colors" RowCount="5">
                <Panel Color="{ReadProperty gen.C1}"/>
                <Panel Color="{ReadProperty gen.C2}"/>
                <Panel Color="{ReadProperty gen.C3}"/>
                <Panel Color="{ReadProperty gen.C4}"/>
                <Panel Color="{ReadProperty gen.C5}"/>
                <Tapped Handler="{toggleState}"/>
                <LayoutAnimation>
                    <Resize Vector="1" RelativeTo="LayoutChange" Easing="BackIn" Duration="0.1"/>
                </LayoutAnimation>
            </Grid>

            <StackPanel Dock="Bottom" >
                <Grid ColumnCount="3">
                    <Button Text="Triad" Margin="16">
                        <Tapped>
                            <Set gen.Mode="Triad"/>
                        </Tapped>
                    </Button>
                    <Button Text="Complementary">
                        <Tapped>
                            <Set gen.Mode="Complementary"/>
                        </Tapped>
                    </Button>
                    <Button Text="Shades">
                        <Tapped>
                            <Set gen.Mode="Shades"/>
                        </Tapped>
                    </Button>
                </Grid>
                <StackPanel Margin="16" >
                    <Grid Columns="1*,3*" Margin="8">
                        <Text Value="Hue" Alignment="CenterLeft"/>
                        <Slider Value="{Property gen.Hue}" Margin="8" Minimum="0" Maximum="1"/>
                    </Grid>
                    <Grid Columns="1*,3*" Margin="8">
                        <Text Value="Saturation" Alignment="CenterLeft" />
                        <Slider Value="{Property gen.Saturation}" Minimum="0" Maximum="1"/>
                    </Grid>
                    <Grid Columns="1*,3*" Margin="8">
                        <Text Value="Value" Alignment="CenterLeft" />
                        <Slider Value="{Property gen.Value}" Minimum="0" Maximum="1"/>
                    </Grid>
                    <Grid ColumnCount="3">
                        <DockPanel>
                            <Text Value="R+" Margin="8" Dock="Left"/>
                            <Slider Value="{Property gen.GainR}" Minimum="0" Maximum="1"/>
                        </DockPanel>
                        <DockPanel>
                            <Text Value="G+" Margin="8" Dock="Left"/>
                            <Slider Value="{Property gen.GainG}" Minimum="0" Maximum="1"/>
                        </DockPanel>
                        <DockPanel>
                            <Text Value="B+" Margin="8" Dock="Left"/>
                            <Slider Value="{Property gen.GainB}" Minimum="0" Maximum="1"/>
                        </DockPanel>
                    </Grid>
                    <Grid ColumnCount="3">
                        <DockPanel>
                            <Text Value="R*" Margin="8" Dock="Left"/>
                            <Slider Value="{Property gen.ScaleR}" Minimum="0" Maximum="1"/>
                        </DockPanel>
                        <DockPanel>
                            <Text Value="G*" Margin="8" Dock="Left"/>
                            <Slider Value="{Property gen.ScaleG}" Minimum="0" Maximum="1"/>
                        </DockPanel>
                        <DockPanel>
                            <Text Value="B*" Margin="8" Dock="Left"/>
                            <Slider Value="{Property gen.ScaleB}" Minimum="0" Maximum="1"/>
                        </DockPanel>
                    </Grid>
                </StackPanel>
            </StackPanel>
        </DockPanel>
    </ClientPanel>
</App>
